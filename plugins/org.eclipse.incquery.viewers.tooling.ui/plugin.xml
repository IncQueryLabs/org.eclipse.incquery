<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="viewersandboxtab" name="Viewer Sandbox Tab" schema="schema/viewersandboxtab.exsd"/>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.incquery.tooling.ui.queryexplorer.QueryExplorer.treeViewerMenu">
         <command
               commandId="org.eclipse.incquery.viewers.tooling.ui.initViewers"
               label="Initialize IncQuery Viewers"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.incquery.viewers.tooling.ui.category"
            id="org.eclipse.incquery.viewers.tooling.ui.initViewers"
            name="Initialize IncQuery Viewers">
      </command>
      <category
            id="org.eclipse.incquery.viewers.tooling.ui.category"
            name="IncQuery Viewers">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.incquery.tooling.ui"
            class="org.eclipse.incquery.viewers.tooling.ui.views.ViewerSandboxView"
            icon="platform:/plugin/org.eclipse.incquery.tooling.ui/icons/logo2.png"
            id="org.eclipse.incquery.viewers.tooling.ui.sandbox"
            name="IncQuery Viewers Sandbox"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.incquery.viewers.tooling.ui.handlers.InitializeViewersHandler"
            commandId="org.eclipse.incquery.viewers.tooling.ui.initViewers">
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
               <iterate>
                  <or>
                     <instanceof
                           value="org.eclipse.incquery.tooling.ui.queryexplorer.content.matcher.ObservablePatternMatcher">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.incquery.tooling.ui.queryexplorer.content.matcher.ObservablePatternMatcherRoot">
                     </instanceof>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.incquery.viewers.tooling.ui.viewersandboxtab">
      <tab
            implementation="org.eclipse.incquery.viewers.tooling.ui.views.tabs.ListViewerSandboxTab">
      </tab>
      <tab
      		implementation="org.eclipse.incquery.viewers.tooling.ui.views.tabs.TreeViewerSandboxTab">
      </tab>
   </extension>

</plugin>
