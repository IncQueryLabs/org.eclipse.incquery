<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.incquery.tooling.category"
            id="org.eclipse.incquery.tooling.ui.patternregistry.registeralleiq"
            name="Register All EIQ">
      </command>
      <command
            categoryId="org.eclipse.incquery.tooling.category"
            id="org.eclipse.incquery.tooling.ui.patternregistry.registersingleeiq"
            name="Register Single EIQ">
      </command>
      <command
            categoryId="org.eclipse.incquery.tooling.category"
            id="org.eclipse.incquery.tooling.ui.patternregistry.addpattern"
            name="Add Pattern">
      </command>
      <command
            categoryId="org.eclipse.incquery.tooling.category"
            id="org.eclipse.incquery.tooling.ui.patternregistry.removepattern"
            name="Remove Pattern">
      </command>
      <command
            categoryId="org.eclipse.incquery.tooling.category"
            id="org.eclipse.incquery.tooling.ui.patternregistry.showlocation"
            name="Show Location">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.eclipse.incquery.tooling.ui.patternregistry.registeralleiq"
               icon="icons/add.gif"
               label="Register all EIQ files"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="selection">
                  <iterate
                        operator="and">
                     <instanceof
                           value="org.eclipse.core.resources.IProjectNature">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.incquery.tooling.ui.patternregistry.registersingleeiq"
               icon="icons/add.gif"
               label="Register EIQ file"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="selection">
                  <iterate
                        operator="and">
                     <instanceof
                           value="org.eclipse.core.resources.IFile">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.incquery.tooling.ui.patternregistry.view">
         <command
               commandId="org.eclipse.incquery.tooling.ui.patternregistry.addpattern"
               icon="icons/add.gif"
               label="Add Pattern"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.incquery.tooling.ui.patternregistry.view">
         <command
               commandId="org.eclipse.incquery.tooling.ui.patternregistry.removepattern"
               icon="icons/remove.gif"
               label="Remove Pattern"
               style="push">
         </command>
         <command
               commandId="org.eclipse.incquery.tooling.ui.patternregistry.showlocation"
               icon="icons/showlocation.gif"
               label="Show Location"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.incquery.tooling.ui.patternregistry.PatternRegistryExecutableExtensionFactory:org.eclipse.incquery.tooling.ui.patternregistry.handlers.RegisterAllHandler"
            commandId="org.eclipse.incquery.tooling.ui.patternregistry.registeralleiq">
      </handler>
      <handler
            class="org.eclipse.incquery.tooling.ui.patternregistry.PatternRegistryExecutableExtensionFactory:org.eclipse.incquery.tooling.ui.patternregistry.handlers.RegisterSingleHandler"
            commandId="org.eclipse.incquery.tooling.ui.patternregistry.registersingleeiq">
      </handler>
      <handler
            class="org.eclipse.incquery.tooling.ui.patternregistry.PatternRegistryExecutableExtensionFactory:org.eclipse.incquery.tooling.ui.patternregistry.handlers.AddPatternHandler"
            commandId="org.eclipse.incquery.tooling.ui.patternregistry.addpattern">
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="org.eclipse.incquery.patternlanguage.emf.EMFPatternLanguage">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.eclipse.incquery.tooling.ui.patternregistry.handlers.RemovePatternHandler"
            commandId="org.eclipse.incquery.tooling.ui.patternregistry.removepattern">
      </handler>
      <handler
            class="org.eclipse.incquery.tooling.ui.patternregistry.PatternRegistryExecutableExtensionFactory:org.eclipse.incquery.tooling.ui.patternregistry.handlers.ShowLocationHandler"
            commandId="org.eclipse.incquery.tooling.ui.patternregistry.showlocation">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.incquery.tooling.ui"
            class="org.eclipse.incquery.tooling.ui.patternregistry.views.PatternRegistryViewPart"
            icon="icons/iqlogo.png"
            id="org.eclipse.incquery.tooling.ui.patternregistry.view"
            name="Pattern Registry"
            restorable="true">
      </view>
   </extension>

</plugin>
